{{#section 'head'}}
<link rel="stylesheet" href="style/composite/blogs.css">
{{/section}}

{{#each content.posts}}
    <article>
        <header>
            <h2><a href="{{link}}">{{title}}</a></h2>
        </header>
        {{#if image}}<img src="{{image}}" alt="Featured Image"/>{{/if}}
        <p>{{{description}}}</p>
        <footer>
            <div class="article-info">
                <div class="avatar" style="background-image: url('{{avatar}}');"></div>
                <a class="article-author" href="{{site}}">{{author}}</a><br/>
                <p class="article-date">{{dateFormat date}}</p>
            </div>
        </footer>
        {{#unless @last}}<hr/>{{/unless}}
    </article>
{{/each}}