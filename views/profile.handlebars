<div>
    <div id="profile-header">
        <div id="profile-header-content">
            <div class="avatar" style="background-image: url('{{blogger.avatarUrl}}');"></div>
            <div id="profile-header-title">
                <h2>{{blogger.firstName}} {{blogger.lastName}}</h2>
                <a id="ph-site" href="{{blogger.websiteUrl}}">{{urlFormat blogger.websiteUrl}}</a>
                <p id="ph-orgs">Member of <em>University of Hull</em></p>
            </div>
        </div>
    </div>
    <div id="profile-body">
        <div>
            <h3>About</h3>
            <p>{{blogger.bio}}</p>
            <div>
                {{#if blogger.githubProfile}}
                <a class="button" href="http://github.com/{{blogger.githubProfile}}">
                    <div class="button-bg"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" viewBox="0 0 42 42" version="1.1">
                        <use xlink:href="/images/defs.svg#icon-github"></use>
                    </svg>
                    <p>GitHub</p>
                </a>
                {{/if}}
                {{#if blogger.twitterProfile}}
                <a class="button" href="http://twitter.com/{{blogger.twitterProfile}}">
                    <div class="button-bg"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" viewBox="0 0 42 42" version="1.1">
                        <use xlink:href="/images/defs.svg#icon-twitter"></use>
                    </svg>
                    <p>Twitter</p>
                </a>
                {{/if}}
                {{#if blogger.linkedInProfile}}
                <a class="button" href="http://linkedin.com/in/{{blogger.linkedInProfile}}">
                    <div class="button-bg"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" viewBox="0 0 42 42" version="1.1">
                        <use xlink:href="/images/defs.svg#icon-linkedin"></use>
                    </svg>
                    <p>LinkedIn</p>
                </a>
                {{/if}}
                {{#if blogger.cvUrl}}
                <a class="button" href="{{blogger.cvUrl}}">
                    <div class="button-bg"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" viewBox="0 0 42 42" version="1.1">
                        <use xlink:href="/images/defs.svg#icon-cv"></use>
                    </svg>
                    <p>CV</p>
                </a>
                {{/if}}
            </div>
            <h3>Blog posts</h3>
